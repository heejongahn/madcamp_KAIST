extends ../layout

block style
  style.
    img.profile {
      width: 100%;
    }

block content
  .col-md-6.col-lg-6.col-md-offset-3.col-lg-offset-3
    h1 내 정보 수정
    form(action="/shop/signup", method="POST", enctype="multipart/form-data")
      .form-group
        label(for="accountid") 계정 이름
        input(type="text", name="accountid", value=shop.accountid, disabled)#accountid.form-control
      .form-group
        label(for="password") 비밀번호
        input(type="password", name="password")#password.form-control
      .form-group
        label(for="shopname") 상호명
        input(type="text", name="shopname", value=shop.shopname)#shopname.form-control
      .form-group
        label(for="phonenum") 전화번호
        input(type="text", name="phonenum", value=shop.phonenum)#phonenum.form-control
      .form-group
        label(for="photo") 사진
        img(src="/uploads/" + shop.photo, alt="no photo", class="profile")
        input(type="file", name="photo")#photo

      input(type="submit", value="회원가입").btn.btn-default
